{
  "__inputs": [],
  "__requires": [
    {
      "type": "grafana",
      "id": "grafana",
      "name": "Grafana",
      "version": "9.0.0"
    }
  ],
  "id": null,
  "uid": "preflight-telemetry",
  "title": "Release Preflight Telemetry",
  "description": "PR-17: Preflight verdict trend, top block reasons, override attempts",
  "tags": ["release-governance", "preflight", "telemetry"],
  "timezone": "browser",
  "schemaVersion": 36,
  "version": 1,
  "refresh": "5m",
  "time": {
    "from": "now-7d",
    "to": "now"
  },
  "panels": [
    {
      "id": 1,
      "title": "Verdict Trend",
      "description": "Preflight verdict dağılımı (zaman serisi)",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 0 },
      "targets": [
        {
          "expr": "release_preflight_verdict_total{verdict=\"OK\"}",
          "legendFormat": "OK",
          "refId": "A"
        },
        {
          "expr": "release_preflight_verdict_total{verdict=\"HOLD\"}",
          "legendFormat": "HOLD",
          "refId": "B"
        },
        {
          "expr": "release_preflight_verdict_total{verdict=\"BLOCK\"}",
          "legendFormat": "BLOCK",
          "refId": "C"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": {
            "lineWidth": 2,
            "fillOpacity": 10,
            "pointSize": 5,
            "showPoints": "auto"
          }
        },
        "overrides": [
          {
            "matcher": { "id": "byName", "options": "OK" },
            "properties": [{ "id": "color", "value": { "fixedColor": "green", "mode": "fixed" } }]
          },
          {
            "matcher": { "id": "byName", "options": "HOLD" },
            "properties": [{ "id": "color", "value": { "fixedColor": "yellow", "mode": "fixed" } }]
          },
          {
            "matcher": { "id": "byName", "options": "BLOCK" },
            "properties": [{ "id": "color", "value": { "fixedColor": "red", "mode": "fixed" } }]
          }
        ]
      }
    },
    {
      "id": 2,
      "title": "Top Block Reasons",
      "description": "En sık karşılaşılan block/hold nedenleri",
      "type": "barchart",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 8 },
      "targets": [
        {
          "expr": "topk(10, release_preflight_reason_total)",
          "legendFormat": "{{reason}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" }
        },
        "overrides": []
      },
      "options": {
        "orientation": "horizontal",
        "showValue": "always",
        "barWidth": 0.8
      }
    },
    {
      "id": 3,
      "title": "Override Attempts",
      "description": "Override girişimleri ve sonuçları",
      "type": "piechart",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 8 },
      "targets": [
        {
          "expr": "release_preflight_override_total",
          "legendFormat": "{{kind}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" }
        },
        "overrides": [
          {
            "matcher": { "id": "byName", "options": "applied" },
            "properties": [{ "id": "color", "value": { "fixedColor": "green", "mode": "fixed" } }]
          },
          {
            "matcher": { "id": "byName", "options": "breach" },
            "properties": [{ "id": "color", "value": { "fixedColor": "red", "mode": "fixed" } }]
          },
          {
            "matcher": { "id": "byName", "options": "attempt" },
            "properties": [{ "id": "color", "value": { "fixedColor": "orange", "mode": "fixed" } }]
          }
        ]
      },
      "options": {
        "pieType": "donut",
        "displayLabels": ["name", "value", "percent"]
      }
    },
    {
      "id": 4,
      "title": "Block Ratio",
      "description": "BLOCK oranı — son 15 dakikadaki BLOCK / toplam verdict",
      "type": "gauge",
      "gridPos": { "h": 8, "w": 8, "x": 0, "y": 16 },
      "targets": [
        {
          "expr": "increase(release_preflight_verdict_total{verdict=\"BLOCK\"}[15m]) / increase(release_preflight_verdict_total[15m])",
          "legendFormat": "Block Ratio",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 0.1 },
              { "color": "red", "value": 0.2 }
            ]
          },
          "min": 0,
          "max": 1,
          "unit": "percentunit"
        },
        "overrides": []
      }
    },
    {
      "id": 5,
      "title": "Override Applied Rate",
      "description": "Kabul edilen override sayısı (saatlik artış)",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 8, "x": 8, "y": 16 },
      "targets": [
        {
          "expr": "increase(release_preflight_override_total{kind=\"applied\"}[1h])",
          "legendFormat": "Applied",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": {
            "lineWidth": 2,
            "fillOpacity": 10,
            "pointSize": 5,
            "showPoints": "auto"
          }
        },
        "overrides": []
      }
    },
    {
      "id": 6,
      "title": "Telemetry Health",
      "description": "Telemetry write failures ve store generation durumu",
      "type": "stat",
      "gridPos": { "h": 8, "w": 8, "x": 16, "y": 16 },
      "targets": [
        {
          "expr": "release_preflight_telemetry_write_failures_total",
          "legendFormat": "Write Failures",
          "refId": "A"
        },
        {
          "expr": "release_preflight_store_generation",
          "legendFormat": "Store Generation",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "red", "value": 1 }
            ]
          }
        },
        "overrides": [
          {
            "matcher": { "id": "byName", "options": "Store Generation" },
            "properties": [
              {
                "id": "thresholds",
                "value": {
                  "mode": "absolute",
                  "steps": [
                    { "color": "blue", "value": null }
                  ]
                }
              }
            ]
          }
        ]
      }
    }
  ]
}
